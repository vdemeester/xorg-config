! file: ~/.Xdefaults
! author: Vincent Demeester http://sbr.me
! vim:ai:si:et:ts=4:sw=4:ft=xdefaults:

! URxvt
URxvt.perl-ext-common: font-size

URxvt.cursorColor: #5E468C
URxvt.cursorBlink: true
URxvt.title: Terminal
URxvt.urgentOnBell: true

!URxvt.internalBorder: 2
URxvt.intensityStyles: false

URxvt*scrollBar_right: false
URxvt*scrollBar: false
URxvt*borderLess: false

Xterm.font: xft:Ubuntu Mono:medium:size=12:antialias=true,xft:Symbola:size=8:antialias=true
URxvt.font: xft:Ubuntu Mono:medium:size=12:antialias=true,xft:Symbola:size=8:antialias=true
URxvt.letterSpace: 0

URxvt*termName: xterm-256color

URxvt.keysym.C-C: perl:clipboard:copy
URxvt.keysym.C-V: perl:clipboard:paste
URxvt.keysym.C-A-V: perl:clipboard:paste_escaped
URxvt.iso14755 : false
URxvt*keysym.Home: \033[1~
URxvt*keysym.End: \033[4~

URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease
URxvt.keysym.C-S-Up:   perl:font-size:incglobal
URxvt.keysym.C-S-Down: perl:font-size:decglobal

#include "/home/vincent/.colours/solarized.light"
!#include "/home/vincent/.colours/solarized.dark"
!#include "/home/vincent/.colours/XresourceTomorrow"
!#include   "/home/vincent/.colours/sbr"

URxvt.depth: 32
URxvt.background: [80]S_base3

!xterm*faceName:           terminus:medium:pixelsize=12
xterm*faceName:           Droid Sans Mono:medium:pixelsize=11

