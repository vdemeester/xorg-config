! file: ~/.Xdefaults
! author: Vincent Demeester http://sbr.me
! vim:ai:si:et:ts=4:sw=4:ft=xdefaults:

! URxvt
URxvt.cursorColor: #5E468C
URxvt.cursorBlink: true
URxvt.title: Terminal
URxvt.urgentOnBell: true

!URxvt.internalBorder: 2

URxvt*scrollBar_right: false
URxvt*scrollBar: false
URxvt*borderLess: false

URxvt.font:xft:Ubuntu Mono:medium:pixelsize=14
URxvt.boldFont:xft:Ubuntu Mono:bold:pixelsize=14
!URxvt.font:xft:Droid Sans Mono:medium:pixelsize=11
!URxvt.boldFont:xft:Droid Sans Mono:bold:pixelsize=11
!URxvt.font:xft:Monospace:medium:pixelsize=11
!URxvt.boldFont:xft:monospace:bold:pixelsize=11
!URxvt.font:     -*-terminus-medium-r-*-*-14-*-*-*-*
!URxvt.boldFont: -*-terminus-bold-r-*-*-14-*-*-*-*

URxvt*termName: xterm-256color

URxvt.keysym.C-C: perl:clipboard:copy
URxvt.keysym.C-V: perl:clipboard:paste
URxvt.keysym.C-A-V: perl:clipboard:paste_escaped
URxvt.iso14755 : false

#include "/home/vincent/.colours/tangoesque"
!#include "/home/vincent/.colours/sen"

!xterm*faceName:           terminus:medium:pixelsize=12
xterm*faceName:           Droid Sans Mono:medium:pixelsize=11

yeahconsole*consoleHeight:25
yeahconsole*term:urxvtcd
yeahconsole*anidelay:0
!yeahconsole*toggleKey:None+F12
yeahconsole*toggleKey:Win+dollar
yeahconsole*keyFull:None+F11
